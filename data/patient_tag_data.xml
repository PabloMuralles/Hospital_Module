<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- how to load data with xml file -->
    <!-- the other way to load data is with csv but in this case we have to name the file like the model  -->
    <!-- but with the name of the url because odoo take the _ like a . so patient_tag = patient.tag  -->
    <record id="patient_tag_vip" model="patient.tag">
        <field name="name">VIP</field>
    </record>


    <record id="patient_tag_kid" model="patient.tag">
        <field name="name">KID</field>
    </record>


    <record id="patient_tag_adult" model="patient.tag">
        <field name="name">ADULT</field>
    </record>


    <record id="patient_tag_mr" model="patient.tag">
        <field name="name">Mr</field>
        <field name="active" eval="False"/>
    </record>

</odoo>