<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="action_report_purchase_order" model="ir.actions.report">
        <field name="name">Invoice Custom</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">om_custom_pdf.invoice_custom_templates</field>
        <field name="report_file">om_custom_pdf.invoice_custom_templates</field>
        <field name="print_report_name">(object._get_report_base_filename())</field>
        <field name="binding_model_id" ref="om_custom_pdf"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="om_custom_pdf.paperformat_custom_test"/>
    </record>

    <record id="paperformat_custom_test" model="report.paperformat">
        <field name="name">A4 Custom</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">10</field>
        <field name="dpi">90</field>
    </record>

</odoo>